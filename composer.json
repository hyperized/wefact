{
  "name": "hyperized/hostfact",
  "description": "Hostfact 2.7 API Implementation",
  "keywords": [
    "hostfact",
    "hostfact-api"
  ],
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Gerben Geijteman",
      "email": "gerben@hyperized.net"
    }
  ],
  "require": {
    "php": ">=7.1",
    "illuminate/support": "^5.4",
    "ext-curl": "^7.1",
    "ext-json": "^1.5",
    "symfony/validator": "4.2.x-dev",
    "doctrine/annotations": "^1.6",
    "doctrine/cache": "^1.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.3",
    "rskuipers/php-assumptions": "^0.7.1",
    "squizlabs/php_codesniffer": "^3.4",
    "povils/phpmnd": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Hyperized\\Hostfact\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hyperized\\Hostfact\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Hyperized\\Hostfact\\HostfactServiceProvider"
      ],
      "aliases": {
        "Hostfact": "Hyperized\\Hostfact\\HostfactServiceProvider"
      }
    }
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs src --standard=PSR2",
    "phpcbf": "vendor/bin/phpcbf src",
    "phpmnd": "vendor/bin/phpmnd src",
    "phpcs.bat": "vendor\\bin\\phpcs.bat src --standard=PSR2",
    "phpcbf.bat": "vendor\\bin\\phpcbf.bat src",
    "phpmnd.bat": "vendor\\bin\\phpmnd src"
  }
}
